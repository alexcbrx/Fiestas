  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <script>
    // SLIDER
    function sliderPlugin(selector) {
      const slides = document.querySelectorAll(`${selector} .slide`);
      slides.forEach(slide => {
        slide.addEventListener('click', () => {
          slides.forEach(s => s.classList.remove('active'));
          slide.classList.add('active');
        });
      });
    }

    sliderPlugin('.comida');
    sliderPlugin('.salones');
    sliderPlugin('.djs');
    sliderPlugin('.entretenimiento');

    // MODAL Y AGREGAR
    let itemSeleccionado = null;
    let modal = new bootstrap.Modal(document.getElementById('modalFiestas'));

    document.querySelectorAll('.agregar').forEach(boton => {
      boton.addEventListener('click', async (e) => {
        const card = e.target.closest('.slide');
        const tipo = card.closest('section').id;
        const nombre = card.querySelector('h3').innerText.trim();

        const idMap = {
          'Restaurante Zibu': 1, 'Mahalo Beach Club': 2, 'Becco Al Mare': 3, 'Antigua': 4,
          'El Anzuelo Acapulco': 5, "Harry's (Lujo / Parrilla)": 6, 'El Gran Recuerdo (Tradicional con Vista)': 7,
          'Restaurant T√≠o Alex (Pie de Playa / Tradicional)': 8, 'Luxor Palace': 1, 'Salon de fiestas RRIO': 2,
          'Sal√≥n de Fiestas Coral': 3, 'Sal√≥n de Fiestas La Cascada': 4, 'Sal√≥n de Fiestas Eclipse': 5,
          'Salon de fiestas El Patio': 6, 'Salon de fiestas Palapa': 7, 'Clazzic (Ricardo Escobar, DeejayZarecks)': 1,
          'Mariachi Juvenil Sol de Acapulco': 2, 'Grupo Musical Feeling': 3, 'Tr√≠o Los Monarkas': 4,
          'Style Party / Dj Concepts': 5, 'Dayro Monta√±ez': 6, 'Musitecnia / Only Events': 7,
          'Payasos Fetuchini y Capuchini': 1, 'Mago Kristoff': 2, 'Chanekes Animaci√≥n': 3,
          'Batucada y Zancos': 4, 'Zanqueros LED / Robot de LEDs': 5, 'Dance Bot Crew': 6, 'Light Circus': 7
        };

        const item_id = idMap[nombre] || null;
        if (!item_id) {
          Toastify({
            text: "‚ö†Ô∏è No se encontr√≥ el elemento en la base de datos.",
            duration: 4000,
            gravity: "bottom",
            position: "right",
            style: { background: "linear-gradient(135deg, #ff5f6d, #ffc371)", color: "#000" }
          }).showToast();
          return;
        }

        itemSeleccionado = { tipo, item_id, nombre };
        const select = document.getElementById('selectFiesta');
        select.innerHTML = '<option>Cargando...</option>';

        const res = await fetch('/mis_fiestas');
        const fiestas = await res.json();

        if (fiestas.length === 0) {
          select.innerHTML = '<option>No tienes fiestas a√∫n</option>';
        } else {
          select.innerHTML = fiestas.map(f => `<option value="${f}">${f}</option>`).join('');
        }

        modal.show();
      });
    });

    document.getElementById('confirmarAgregar').addEventListener('click', async () => {
      const fiesta_nombre = document.getElementById('selectFiesta').value;
      if (!fiesta_nombre || fiesta_nombre === 'Cargando...') return;

      const { tipo, item_id, nombre } = itemSeleccionado;

      try {
        const response = await fetch('/agregar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ tipo, id: item_id, fiesta_nombre })
        });

        const result = await response.json();
        if (result.status === 'ok') {
          modal.hide();
          Toastify({
            text: `üéâ ${nombre} agregado a "${fiesta_nombre}"`,
            duration: 4000,
            gravity: "bottom",
            position: "right",
            style: {
              background: "linear-gradient(135deg, #ff00cc, #cc00ff)",
              color: "#fff",
              boxShadow: "0 0 20px #ff00ccaa",
              borderRadius: "10px",
              fontWeight: "600"
            }
          }).showToast();
        } else {
          Toastify({
            text: `‚ö†Ô∏è ${result.message}`,
            duration: 4000,
            gravity: "bottom",
            position: "right",
            style: {
              background: "linear-gradient(135deg, #ff5f6d, #ffc371)",
              color: "#000",
              fontWeight: "600"
            }
          }).showToast();
        }
      } catch (err) {
        console.error(err);
        Toastify({
          text: "‚ùå Error al conectar con el servidor.",
          duration: 4000,
          gravity: "bottom",
          position: "right",
          style: {
            background: "linear-gradient(135deg, #ff5f6d, #ffc371)",
            color: "#000"
          }
        }).showToast();
      }
    });
  </script>
